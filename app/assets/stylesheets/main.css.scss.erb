body {
  background-color: white;  
  
  #content {
    margin: 0 auto;
    width: 900px;
  }
  #left_column {
    width: 620px;
    float: left;
  }
  #right_column, aside {
    width: 240px;
    padding: 0 0 0 20px;
    float: right;
    border-left: solid 1px #bbb;
    min-height: 700px;
  }
  a {
    color: #222;
    &:hover {
      color: #555;
    }
  }
}

header {
  margin: 0 0 50px;
  background-color: #01243B;
  border-bottom: solid 1px #ccc;
  #top {
    padding: 0 0 3px;
  }
  #bottom {
    background-color: #5288DB;
    border-top: solid 1px #7ca5e4;
    border-bottom: solid 1px #2b6ccf;
    position: relative;
    height: 28px;
  }
  .runner {
    border-top: dashed 1px #c2d5f2;
    margin: 2px 0;
  }
  .inner {
    margin: 0 auto;
    width: 900px;
  }
  h1 a {
    color: white;
#    padding: 100px;
#    font-size: 36px;
#    font-family: Daniel;
#    font-weight: bold;
#    text-shadow: 0 -2px 1px #000;
#    letter-spacing: -1px;
#    word-spacing: -1px;
    display: block;
    height: 57px;
    width: 237px;
    padding: 5px 0;
  }
  ul {
    list-style: none;
    position: absolute;
    top: -1px;
    li {
      float: left;
      a {
        display: block;
        padding: 7px 16px;
        text-shadow: 0 -1px 1px #1f4e97;
        color: white;
        font-weight: bold;
        font-size: 13px;
        &:hover {
          color: #fff;
          background-color: #457fd8;
        }
      }
    }
    li.selected {
      a {
        top: -1px;
        background-color: #1a407b;
      }
    }
  }
  #login_status {
    float: right;
    color: #aaa;
    margin: 41px 0 0;
    a {
      font-weight: bold;
      color: white;
      &:hover {
        color: #aaa;
      }
    }
  }
}

.help {

}

.guide {
  margin: 0 0 10px;
  padding: 0 0 10px;
  border-bottom: solid 1px #ccc;
  h2 a {
    font-size: 14px;
    color: #333;
    &:hover {
      color: #777;
    }
  }
}

.knowledge {
  padding: 20px;
  #card_front {
    width: 300px;
    float: left;
    padding: 20px;
    border-radius: 12px;
    border-top: solid 1px #ddd;
    border-right: solid 1px #aaa;
    border-left: solid 1px #aaa;
    border-bottom: solid 3px #888;
    h1 {
      font-size: 38px;
      font-weight: bold;
      color: black;
    }  
  }

  #card_back {
    width: 180px;
    float: right;
    font-size: 16px;
    padding: 30px 20px 0;
    h1 {
      color: black;
    }
  }
}

#center {
  #mnemonics {
    margin: 40px 0 0;
    padding: 20px 0;
    border-top: dotted 1px #ccc;
    h3 {
      font-size: 16px;
      margin: 0 0 15px;
    }
  }
}

.best.mnemonic {
  margin: 0 0 50px;
  .heading {
    background-color: #47be15;
    border-bottom: solid 1px #3c9f12;
  }
  .body {
    border-top: solid 2px #30810e;
  }
}

.regular.mnemonic {
  margin: 0 0 20px;
  .heading {
    background-color: #aaa;
    border-bottom: solid 1px #888;
  }
  .body {
    border-top: solid 2px #666;
  }
}

.mnemonic {
  .heading {
    border-top-right-radius: 12px;
    border-top-left-radius: 12px;
    padding: 5px 16px 3px;
    color: white;
    text-shadow: 0 -1px 1px #555;
    .title {
      float: left;
      padding: 1px 0 0;
      a {
        color: white;
        font-weight: bold;
        &:hover {
          color: #ddd;
        }
      }
    }
    .score {
      float: right;
      font-weight: bold;
      font-size: 16px;
    }
  }
  .body {
    background-color: white;
    padding: 16px;
    border-left: solid 1px #ccc;
    border-right: solid 1px #ccc;
    border-bottom-left-radius: 12px;
    border-bottom-right-radius: 12px;
    border-bottom: solid 3px #aaa;
    p {
      float: left;
    }
    .voting {
      float: right;
      width: 25px;
      .up_vote, .down_vote, .reverse_up, .reverse_down {
        display: inline-block;
        padding: 4px;
        color: white;
        border-radius: 6px;
        margin: 0 0 2px;
        &:hover {
          cursor: pointer;
        }
      }
      .up_vote, .down_vote {
        background-color: #47be15;
        &:hover {
          background-color: #5ae620;
        }
      }
      .reverse_up, .reverse_down {
        background-color: #aaa;
        &:hover {
          background-color: #a21819;
        }
      }
      .reverse_link {
        display: none;
      }
      .hide {
        display: none;
      }
    }
  }
}

#new_list_nav {
  margin: 0 0 20px;
  .next, .previous {
    display: block;
    border-bottom: solid 1px #ccc;
    padding: 10px;
    h5 {
      font-size: 12px;
      font-weight: normal;
      margin: 0 0 10px;
    }
    h2 {
      font-size: 20px;
    }
    &:hover {
      background-color: #ddd;
    }
  }
  .list_identity {
    margin: 0 0 10px;
    padding: 0 0 5px;
    border-bottom: solid 1px #ccc;
    h2 {
      font-size: 16px;
      a {
        color: #222;
      }
    }
  }
}

.list_nav {
  margin: 0 0 20px;
  border-bottom: solid 1px #ccc;
  h5 {
    font-size: 11px;
    color: #888;
    font-weight: normal;
  }
  .next_prev_nav {
    h2 {
      font-size: 20px;
      margin: 20px 0;
    }
  }
  .previous {
    width: 118px;
    float: left;
  }
  .next {
    width: 118px;
    float: right;
  }
  .list_identity {
    padding: 10px 0;
    h2 a {
      font-size: 16px;
    }
  }
}

#card_mode {
  margin: 20px 0;
  h4 {
    color: #999;
    font-size: 11px;
    margin: 0 0 10px;
    font-weight: normal;
  }
  .button_container {
    color: white;
    width: 184px;
    margin: 0 auto;
    .front, .center, .back {   
      width: 40px;
      text-align: center;
      padding: 10px;
      background-color: #5288DB;
      float: left;
      border-bottom: solid 3px #1f4e97;
      text-shadow: 0 -1px 1px #444;
      font-weight: bold;
      &:hover {
        cursor: pointer;
      }
    }
    .front {
      border-top-left-radius: 8px;
      border-bottom-left-radius: 8px;
    }
    .center {
      border-left: solid 1px #999;
      border-right: solid 1px #999;
    }
    .back {
      border-top-right-radius: 8px;
      border-bottom-right-radius: 8px;
    }
    .front_pressed,
    .center_pressed, 
    .back_pressed {
      border-bottom: solid 1px #1f4e97;
      border-top: solid 2px #000509;
      background-color: #1f4e97;
      border-left: solid 1px #999; 
      color: white;
      text-shadow: 0 1px 1px #444;   
    }
  }
}

.add_mnemonic {
  border-radius: 12px;
  border: dotted 1px #666;
  margin: 0 0 20px;
  padding: 20px;
}

.standard_list {
  list-style: none;
  margin: 0;
  li {
    padding: 10px;
    border-bottom: dotted 1px #ccc;
    h2 {
      font-size: 24px;
      line-height: 28px;
    }
    p {
      margin: 5px 0 0;
      font-family: Lucida Grande, sans-serif;
    }
    h3 {
      a {
        font-weight: normal;
        font-size: 11px;
        color: #888;
        &:hover {
          color: #aaa;
        }
      }
    }
    h5 {
      float: right;
      margin: 7px 0 0;
      a {
        color: #888;
        font-size: 12px;
        font-weight: normal;
      }
    }
  }
}

.standard_title {
  padding: 0 0 40px;
  border-bottom: solid 1px #ddd;
  h1 {
    font-size: 32px;
    color: #444;
    letter-spacing: -1px;
  }
  .owner {
    font-size: 12px;
    color: #666;
    margin: 0 0 20px;
  }
  .description {
    font-size: 14px;
    color: #222;
  } 
}

.member_lists {
  margin: 0 0 20px;
  h2 {
    font-size: 18px;
    margin: 0 0 10px;
  }
  ul {
    list-style: none;
    margin: 0;
    border-top: solid 1px #ddd;
    li {
      padding: 10px 0;
      border-bottom: solid 1px #ddd;
    }
  }
}

aside {
  float: right;
}

/* Buttons
===========================*/
.new_fact_button,
.new_list_button {
  margin: 0 0 10px;
  text-align: center;
}

.new_fact_button a,
.new_list_button a {
  display: block;
  padding: 10px 0;
  width: 200px;
  color: white;
  background-color: black;
}

/* Fact list
============================*/
.fact_list {
  .delete {
    float: right;
    margin: 7px 0 0;
    display: none;
  }
  .position, .handle {
    margin: 0 5px 0 0;
    color: #aaa;
    font-weight: normal;
    font-size: 16px;
  }
  .handle {
    display: none;
    &:hover {
      cursor: pointer;
    }
  }
}

aside .list {
  margin: 0 0 10px;
  h3 {
    background-color: #1b9234;
    text-shadow: 0 -1px 1px #092e10;
    color: white;
    font-size: 13px;
    font-weight: bold;
    padding: 5px 7px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    border-top: solid 1px #1ea039;
    border-left: solid 1px #1ea039;
    border-right: solid 1px #1ea039;
    border-bottom: solid 1px #092e10;
  }
  ul {
    list-style: none;
    margin: 0;
    border: solid 1px #aaa;
    li {
      padding: 5px 7px;
    }
  }
}

.blue_button {
  display: block;
  background-color: #5288db;
  color: white;
  font-size: 14px;
  font-weight: bold;
  text-shadow: 0 -1px 1px #1a407b;
  border-radius: 6px;
  text-align: center;
  padding: 10px 0;
  margin: 0 0 10px;
  border-bottom: solid 3px #112a50;
  border-top: none;
  &:hover {
    cursor: pointer;
    background-color: #7ca5e4;
    color: white;
  }
}

/* Activity list
============================*/

#activity,
.activity {
  float: left;
  width: 600px;
  .a {
    border-bottom: solid 1px #ddd;
    padding: 0 0 15px;
    margin: 0 0 15px;
    font-size: 14px;
    a {
      background-color: #f8fdbf;
      padding: 2px 0;
    }
    p {
      margin: 10px 0 0;
      font-size: 12px;
      color: #888;
    }
    .created {
      float: right;
      font-size: 11px;
      color: #5288DB;
      font-weight: bold;
    }
  }
}